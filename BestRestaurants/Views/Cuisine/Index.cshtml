@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Cuisine>;

<h1>Cuisines</h1>

@if (@Model.Count == 0)
{
  <p><strong>NOTE:</strong> You need to have at least one restaurant before you can add a cuisine!</p>
  <p>Go to @Html.ActionLink("this page", "Create", "Restaurants") to create a restaurant.</p>

  <h3>No cuisines have been added yet!</h3>
}
else
{
  <ul>
    @foreach (Cuisine cuisine in Model)
    {
      <li>@Html.ActionLink($"{cuisine.Description}", "Details", new { id = cuisine.CuisineId }) | @cuisine.Restaurant.Name
      </li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new cuisine", "Create", "Cuisine")</p>
